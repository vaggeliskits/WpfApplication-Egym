        <Label x:Name="lbl1" Content="Χρόνος:&#xA;&#xA;Απόσταση:" HorizontalAlignment="Left" Margin="256,93,0,0" VerticalAlignment="Top" Height="67" Foreground="White" FontSize="14"/>
