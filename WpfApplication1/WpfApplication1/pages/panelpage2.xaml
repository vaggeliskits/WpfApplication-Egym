        <Button x:Name="startbtn" Content="Έναρξη" HorizontalAlignment="Left" Margin="253,243,0,0" VerticalAlignment="Top" Width="52" Height="29" Background="#FF61F749" IsEnabled="False"/>
        <Button x:Name="stopbtn" Content="Τέλος" HorizontalAlignment="Left" Margin="352,243,0,0" VerticalAlignment="Top" Width="52" Background="Red" Height="29" Cursor="Hand" Click="stopbtn_Click"/>
        <Label x:Name="timebox" HorizontalAlignment="Left" Margin="335,93,0,0" VerticalAlignment="Top" Height="31" Foreground="White" FontSize="15" Width="55" Content="00 : 00"/>
